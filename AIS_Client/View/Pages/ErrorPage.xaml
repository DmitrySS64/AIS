<Page x:Class="AIS_Client.View.Pages.ErrorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AIS_Client.View.Pages"
      xmlns:VM="clr-namespace:AIS_Client.ViewModel"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ErrorPage">
    <Grid>
        <TextBlock x:Name="TextBlock"
                   HorizontalAlignment="Center" VerticalAlignment="Center"
                   FontSize="16" TextWrapping="Wrap"/>
        <Button Content="Перезагрузить страницу"
                HorizontalAlignment="Center" VerticalAlignment="Bottom"
                Margin="0,0,0,20" Padding="10,5" Command="{Binding Rel}"/>
    </Grid>
</Page>
