<Window x:Class="AIS_Client.View.CreateModalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AIS_Client.View"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"
        SizeToContent="WidthAndHeight"
        Title="Добавление новой записи">
    <StackPanel>
        <local:FormControl x:Name="DynamicForm"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button Content="OK" Width="80" Margin="10,0" Click="OkButton_Click"/>
            <Button Content="Cancel" Width="80" Margin="10,0" Click="CancelButton_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
