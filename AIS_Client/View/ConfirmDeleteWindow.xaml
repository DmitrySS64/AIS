<Window x:Class="AIS_Client.View.ConfirmDeleteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AIS_Client.View"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="ConfirmDeleteWindow">
    <StackPanel Margin="20">
        <TextBlock Text="Вы уверены, что хотите удалить эту запись?" 
                   FontWeight="Bold" 
                   Margin="0,0,0,10" />
        <TextBlock x:Name="ContentTextBox" Text="" Margin="0,0,0,10"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Удалить" Width="80" Margin="10,0" Click="OkButton_Click" />
            <Button Content="Отмена" Width="80" Margin="10,0" Click="CancelButton_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
