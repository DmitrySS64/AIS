<Page x:Class="Vkontakte.Pages.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Vkontakte.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HomePage">

    <StackPanel>
        <TextBox x:Name="console" IsReadOnly="True" Height="300" VerticalScrollBarVisibility="Auto"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Получить информацию о себе" Click="GetProfileInfoButton_Click" Padding="10"/>
            <Button Content="Получить список id друзей" Click="GetFriendsButton_Click" Padding="10"/>
            <Button Content="Получить список друзей" Click="GetFriendsInfoButton_Click" Padding="10"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBox x:Name="userInput" Padding="10" Width="300" Height="auto"/>
            <Button Content="Получить информацию о пользователях" Click="GetUserInfoButton_Click"/>
        </StackPanel>
    </StackPanel>
</Page>
